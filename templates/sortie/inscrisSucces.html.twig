{% extends 'layout.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}
    {% if inscrit == true %}
        <h1>Vous êtes Inscrit à cette sortie</h1>
    {% elseif inscrit == false %}
        <h1>Vous vous êtes désinscrit de cette sortie</h1>
    {% endif %}

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ sortie.name }}</td>
            </tr>
            <tr>
                <th>DateHeureDebut</th>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ sortie.duree ? sortie.duree|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>InfosSortie</th>
                <td>{{ sortie.infosSortie }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ sortie.lieu }}</td>
            </tr>
        </tbody>
    </table>
    <br>
    <a class="btn btn-light" href="{{ path('sortie_index') }}">Retour à la liste des sorties</a>
    <a class="btn btn-light" href="{{ path('sortie_show_my_sorties') }}">Retour à la liste de mes sorties</a>

    {#{{ include('sortie/_delete_form.html.twig') }}#}
{% endblock %}
