{% extends 'layout.html.twig' %}

{% block title %}New Sortie{% endblock %}

{% block body %}
    <h1 class="text-center">Cr√©er une sortie</h1>

<div class="container">
<div class="row">
    <div class="col">
        {{ form_row(form.name) }}
        {{ form_row(form.dateHeureDebut) }}
        {{ form_row(form.dateLimiteInscription) }}
        {{ form_row(form.nbInscriptionMax) }}
        {{ form_row(form.duree) }}
        {{ form_row(form.infosSortie) }}
    </div>


    <div class="col">

        {{ form_row(form.campus) }}

        <div class="text-type">
            <label for="ville">Ville</label>
            <select class="text-type" id="ville">
            </select>
        </div>


        {{ form_row(form.lieu) }}

        <div class="text-type">
            <label for="rue">Rue</label>
            <input type="nom" class="text-type" id="rue">
        </div>

        <div class="text-type">
            <label for="codePostal">Code Postal</label>
            <input type="nom" class="text-type" id="codePostal">
        </div>

        <div class="text-type">
            <label for="latitude">Latitude</label>
            <input type="nom" class="text-type" id="latitude">
        </div>

        <div class="text-type">
            <label for="longitude">Longitude</label>
            <input type="nom" class="text-type" id="longitude">
        </div>
    </div>
    </div>
</div>
    <div class="text-center">
    <button type="submit">Enregistrer</button>
    <button type="submit">Publier la sortie</button>
    <button type="submit">Annuler</button>
    </div>
    {# <a href="{{ path('sortie_index') }}">back to list</a> #}

{% endblock %}
