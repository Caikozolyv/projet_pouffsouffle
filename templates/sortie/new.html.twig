{% extends 'layout.html.twig' %}

{% block title %}New Sortie{% endblock %}

{% block body %}
    <h1 class="text-center">Cr√©er une sortie</h1>

    <div class="container">
        <form action="{{ path('sortie_new')}}" method="POST">
        <div class="row">
            <div class="col">
{#                {{ form_start(form, {'action': "{{ path('sortie_new')}}", 'method' : 'GET'}) }}#}
