{% extends 'layout.html.twig' %}

{% block title %}New Sortie{% endblock %}

{% block body %}
    <h1 class="text-center">Cr√©er une sortie</h1>

<div class="row">
    <div class="col">
        {{ form_row(form.name) }}
        {{ form_row(form.dateHeureDebut) }}
        {{ form_row(form.dateLimiteInscription) }}
        {{ form_row(form.nbInscriptionMax) }}
        {{ form_row(form.duree) }}
        {{ form_row(form.infosSortie) }}
    </div>
</div>

<div class="row">
    <div class="col">

        {{ form_row(form.campus) }}

        <div class="form-group">
            <label for="selectVilleLieux">Ville</label>
            <select class="form-control" id="selectVilleLieux">

            </select>
        </div>


        {{ form_row(form.lieu) }}

        <div class="form-text">
            <label for="rue">Rue</label>
            <input type="nom" class="form-control" id="nomLieu" aria-describedby="nomLieu" placeholder="">
        </div>

        <div class="form-group">
            <label for="codePostal">Code Postal</label>
            <input type="nom" class="form-control" id="nomLieu" aria-describedby="nomLieu" placeholder="">
        </div>

        <div class="text-type">
            <label for="latitude">Latitude</label>
            <input type="nom" class="form-control" id="nomLieu" aria-describedby="nomLieu" placeholder="">
        </div>

        <div class="form-group">
            <label for="longitude">Longitude</label>
            <input type="nom" class="form-control" id="nomLieu" aria-describedby="nomLieu" placeholder="">
        </div>

    </div>
</div>

    <button class="btn">{{ button_label|default('Enregistrer') }}</button>
    <button class="btn">{{ button_label|default('Publier la sortie') }}</button>
    <button class="btn">{{ button_label|default('Annuler') }}</button>

    {# <a href="{{ path('sortie_index') }}">back to list</a> #}

{% endblock %}
