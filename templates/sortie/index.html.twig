{% extends 'layout.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block body %}
    <h1>Sortie index</h1>

            <div class="jumbotron">
                <div class="container">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    {{ form_end(form) }}
                </div>
            </div>

    <table class="table">
        <thead>
        <tr>
            <th>IdSortie</th>
            <th>Name</th>
            <th>DateHeureDebut</th>
            <th>Duree</th>
            <th>DateLimiteInscription</th>
            <th>NbInscriptionMax</th>
            <th>InfosSortie</th>
            <th>Etat</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.idSortie }}</td>
                <td>{{ sortie.name }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d') : '' }}</td>
                <td>{{ sortie.duree ? sortie.duree|date('H:i:s') : '' }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d') : '' }}</td>
                <td>{{ sortie.nbInscriptionMax }}</td>
                <td>{{ sortie.infosSortie }}</td>
                <td>{{ sortie.etat }}</td>
                <td>
                    <a href="{{ path('sortie_show', {'idSortie': sortie.idSortie}) }}">show</a>
                    <a href="{{ path('sortie_edit', {'idSortie': sortie.idSortie}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucunes donn√©es dans le tableau</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sortie_new') }}">Ajouter une Sortie</a>
{% endblock %}
