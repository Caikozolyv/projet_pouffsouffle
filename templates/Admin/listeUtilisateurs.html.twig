{% extends 'layoutAdmin.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1>Participant index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>IdParticipant</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Telephone</th>
            <th>Mail</th>
            <th>Administrateur</th>
            <th>Actif</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.idParticipant }}</td>
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.telephone }}</td>
                <td>{{ participant.mail }}</td>
                <td>{{ participant.administrateur ? 'Yes' : 'No' }}</td>
                <td>{{ participant.actif ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('participant_show_admin', {'idParticipant': participant.idParticipant}) }}">show</a>
                    <a href="{{ path('participant_edit', {'idParticipant': participant.idParticipant}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participant_new') }}">Create new</a>
{% endblock %}