{% extends 'layout.html.twig' %}

{% block title %}Campus index{% endblock %}

{% block body %}
    <h1>Campus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCampus</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for campu in campuses %}
            <tr>
                <td>{{ campu.idCampus }}</td>
                <td>{{ campu.nom }}</td>
                <td>
                    <a href="{{ path('campus_show', {'idCampus': campu.idCampus}) }}">show</a>
                    <a href="{{ path('campus_edit', {'idCampus': campu.idCampus}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('campus_new') }}">Create new</a>
{% endblock %}
